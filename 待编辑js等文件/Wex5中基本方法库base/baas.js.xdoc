		// 获取当前数据对象
		var data = event.source;
		// 构造请求参数
		var params = {
			// 列定义
			"columns" : Baas.getDataColumns(data), 
			// 分页信息 - 行数
			"limit" : event.limit,
			// 分页信息 - 行偏移
